@page
@model TraineesModel
@{
    ViewData["Title"] = "Trainees";
    ViewData["ActivePage"] = ManageNavPages.Trainer;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div id="container-new" class="settings-container-new">
        @if (Model.isTrainer)
        {
            <form id="profile-form" method="post">
                <input asp-for="Input.RemoveTraineeId" type="hidden" class="form-control" />
                <ul class="list-group pt-4">
                    @if (Model.Trainees != null)
                    {
                        @foreach (var item in Model.Trainees)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center btn" onclick="RemoveId('@item.Id')">
                                <span>
                                    @item.FullName - @Html.DisplayFor(modelItem => item.UserName)
                                </span>
                                <span>
                                    REMOVE
                                </span>
                            </li>
                        }
                    }
                </ul>
            </form>
        }
        else
        {

        }
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            let max = 10
            function RemoveId(id) {
                $("#Input_RemoveTraineeId").val(id);
                $("#profile-form").submit();
            }
        </script>
    }
